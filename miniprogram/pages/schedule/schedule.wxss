.lefter {
  float: left;
}

.intro {
  float: inline-start;
  margin: 3px;
  font-size: 13px;
  text-align: center;
  color: #2d8cf0;
  border-radius: 8px;
}

#hd {
  text-align: center;
  background-color: #66ccff;
  font-size: 1em;
}

#hd .button {
  background-size: cover;
  margin: 0 0 0 0;
  padding: 0 0 0 0;
}

#hd .button::after {
  border: none;
}

#dl {
  float: left;
  background-color: #ff6600;
}

.timetable {
  text-align: center;
  font-size: 0.65rem;
}

#dr {
  float: right;
  background-color: #f8f8f9;
}

#showDetail {
  z-index: 10;
  position: absolute;
  top: 0;
  left: 0;
}

#detailBox {
  z-index: 12;
  border-style: solid;
  border-width: 2px;
  border-color: black;
  position: absolute;
  left: 0;
  background: wheat;
  border-radius: 50px 50px 0 0;
  transition: all 0.6s;
}

#detail-top {
  z-index: 11;
  position: absolute;
  top: 0;
  left: 0;
}

#textBox {
  padding-top: 50px;
  color: black;
  font-size: 1.2em;
  text-align: center;
}

#className {
  color: #2d8cf0;
  font-size: 1.6em;
  margin: 5px 0 25px 0;
}

#detail-img {
  position: absolute;
}

.detail-list {
  margin: 10px 0;
}

.detail-left {
  float: left;
}

.detail-right {
  float: right;
  text-align: left;
}